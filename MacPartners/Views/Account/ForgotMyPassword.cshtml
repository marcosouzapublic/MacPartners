@{
    ViewData["Title"] = "Esqueci minha senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var email = ViewBag.Email != null ? ViewBag.Email : "";
}

<h4>Esqueci minha senha</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ForgotMyPassword">
            <div class="form-group">
                <label class="control-label">E-mail do usuário</label>
                <input name="email" class="form-control" value="@email" />
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary-mp btn-lg" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Notifications/flunt-notifications.js"></script>

    <script>
        $(document).ready(() => {
            if ('@ViewBag.Faild' == 'True')
                showFluntNotifications('@ViewBag.Notifications', 'procurar', 'Usuário');
            else if('@ViewBag.Faild' == 'False')
                showSuccessMessage('@ViewBag.Notifications');
        });
    </script>
}


